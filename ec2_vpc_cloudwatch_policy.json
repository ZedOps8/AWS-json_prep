{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "ec2:RunInstances",
        "ec2:StartInstances",
        "ec2:StopInstances",
        "ec2:TerminateInstances"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "vpc:Describe*",
        "vpc:CreateVpc",
        "vpc:DeleteVpc",
        "vpc:ModifyVpcAttribute",
        "vpc:Associate*",
        "vpc:Detach*",
        "vpc:CreateSubnet",
        "vpc:DeleteSubnet",
        "vpc:ModifySubnetAttribute"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData",
        "cloudwatch:GetMetricStatistics",
        "cloudwatch:ListMetrics",
        "cloudwatch:Describe*"
      ],
      "Resource": "*"
    }
  ]
}
